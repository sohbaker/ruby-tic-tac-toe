#!/usr/bin/env ruby
# /env uses rvm to find the version of ruby you have, rather than using the system one

# Allows you to require any file in lib
$: << File.join(File.dirname(__FILE__), "..", "lib")

require "display"
require "board"
require "player_module"
require "game"

display = Display.new
board = Board.new(["1", "2", "3", "4", "5", "6", "7", "8", "9"])
display.show_welcome_instructions
type = display.get_game_type

players = Player.generate(type, board)
player_1 = players[0]
player_2 = players[1]

game = Game.new(board, display, player_1, player_2)
game.play_game

